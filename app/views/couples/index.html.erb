<h1>Listing couples</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Her Name</th>
    <th>His Name</th>
    <th></th>
    <th></th>
  </tr>

<% @couples.each do |couple| %>
  <tr>
    <td><%= couple.username %></td>
    <td><%= couple.email %></td>
    <td><%= couple.her_name %></td>
    <td><%= couple.his_name %></td>
    <td></td>
    <td><%= link_to 'Show', couple %></td>
    <td><%= link_to 'Edit', edit_couple_path(couple) %></td>
    <td><%= link_to 'Destroy', couple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

