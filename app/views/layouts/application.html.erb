      ga('create', 'UA-42362611-1', 'cupplehub.co');
      ga('send', 'pageview');
    </script>
  </head>
  <% if params[:action] == 'splash' || (params[:controller] == 'home' && params[:action] == 'show') %>
      <body class="splash" >
    <% elsif params[:action] == 'show' && params[:controller] == 'profile' %>
      <body class="proshow" >
    <% else  %>
      <body>
    <% end %>
      <%= render 'layouts/header' %>
      <div id="main" role="main">
        <div class="container">
          <div>
             <div class="row">
              <div class="span12">
                <%= render 'layouts/messages' %>
                <%= yield %>
              </div>
            </div>
            <footer>
            </footer>
          </div>
        </div> <!--! end of .container -->
      </div> <!--! end of #main -->
    </body>

</html>
