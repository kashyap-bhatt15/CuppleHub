<h1>Welcome to CuppleHub</h1>

<%= form_for("couple", :url => couple_session_path) do |f| %>
  <div>
    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </div>
  <%= f.submit 'Sign in' %>
  <%= link_to "Forgot your password?", new_password_path('couple') %>
<% end %>
